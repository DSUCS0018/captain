generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URI")
}

model User {
    id               Int       @id @default(autoincrement())
    name             String
    email            String    @unique
    googleId         String?   @unique
    password         String?
    resetToken       String?
    resetTokenExpiry DateTime?
    createdAt        DateTime  @default(now())
    updatedAt        DateTime  @updatedAt
}
